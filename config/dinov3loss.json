{
    "name": "dinov3loss",
    "norm": true,
    "percent": false,
    "gpu_ids": [0, 1],
    "seed" : -1,
    "finetune_norm": false,
    "task" : "denoise",
    "path": {
        "base_dir": "experiments",
        "code": "code",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint"
        // "resume_state": "experiments/EMDiffuse-r/400"
    },

    "datasets": {
        "train": {
            "which_dataset": {
                "name": ["data.dataset", "EMDiffusenDataset"],
                "args":{
                    "data_root": "",
                    "data_len": -1,
                    "norm": true,
                    "percent": false
                }
            },
            "dataloader":{
                "validation_split": 20,
                "args":{
                    "batch_size": 3,
                    "num_workers": 8,
                    "shuffle": true,
                    "pin_memory": true,
                    "drop_last": true
                },
                "val_args":{
                    "batch_size": 10,
                    "num_workers": 8,
                    "shuffle": false,
                    "pin_memory": true,
                    "drop_last": false
                }
            }
        },
        "test": {
            "which_dataset": {
                "name": "EMDiffusenDataset",
                "args":{
                    "data_root": "",
                    "norm":true,
                    "percent": false,
                    "phase": "val"
                }
            },
            "dataloader":{
                "args":{
                    "batch_size": 8,
                    "num_workers": 0,
                    "pin_memory": true
                }
            }
        }
    },

    "model": {
        "which_model": {
            "name": ["models.EMDiffuse_model", "DiReP"],
            "args": {
                "sample_num": 8,
                "task": "denoise",
                "ema_scheduler": {
                    "ema_start": 1,
                    "ema_iter": 1,
                    "ema_decay": 0.9999
                },
                "optimizers": [
                    { "lr": 5e-5, "weight_decay": 0}
                ]
            }
        },
        "which_networks": [
            {
                "name": ["models.EMDiffuse_network", "Network"],
                "args": {
                    "init_type": "kaiming",
                    "module_name": "guided_diffusion",
                    "norm": true,
                    "sample_method": "ddim",
                    "ddim_timesteps": 50,
                    "ddim_eta": 0.0,
                    "unet": {
                        "in_channel": 2,
                        "out_channel": 1,
                        "inner_channel": 32,
                        "channel_mults": [
                            1,
                            2,
                            4,
                            8
                        ],
                        "attn_res": [
                            16
                        ],
                        "num_head_channels": 32,
                        "res_blocks": 2,
                        "dropout": 0.2,
                        "image_size": 256
                    },
                    "beta_schedule": {
                        "train": {
                            "schedule": "linear",
                            "n_timestep": 2000,
                            "linear_start": 1e-6,
                            "linear_end": 0.01
                        },
                           "test": {
                            "schedule": "linear",
                            "n_timestep": 1000,
                            "linear_start": 1e-4,
                            "linear_end": 0.09
                        }

                    }
                }
            }
        ],
        "which_losses": [
            "dinov3_loss"
        ],
        "which_metrics": [
            "mae",
            "mse",
            "psnr",
            "ssim",
            "fsim",
            "lpips",
            "dists",
            "clipiqa"
        ]
    },

    "train": {
        "n_epoch": 1e8,
        "n_iter": 1e8,
        "val_epoch": 10,
        "save_checkpoint_epoch": 20,
        "log_iter": 2000,
        "tensorboard" : true
    },

    "debug": {
        "val_epoch": 1,
        "save_checkpoint_epoch": 1,
        "log_iter": 10,
        "debug_split": 50
    }
}